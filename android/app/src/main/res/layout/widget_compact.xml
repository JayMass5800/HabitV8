<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/compact_widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Minimal Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_header_background"
        android:padding="6dp"
        android:layout_marginBottom="8dp"
        android:elevation="1dp">

        <TextView
            android:id="@+id/compact_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HabitV8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/open_app_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_open_in_new"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="@android:color/white"
            android:alpha="0.9"
            android:contentDescription="Open app" />

    </LinearLayout>

    <!-- Scrollable Habits List -->
    <ListView
        android:id="@+id/compact_habits_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="6dp"
        android:clipToPadding="false"
        android:paddingBottom="2dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/compact_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="All habits completed!"
        android:textSize="11sp"
        android:textColor="@color/widget_text_secondary"
        android:gravity="center"
        android:visibility="gone" />

    <!-- More Habits Indicator (now shows scroll hint) -->
    <TextView
        android:id="@+id/more_habits_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroll for more habits"
        android:textSize="10sp"
        android:textColor="@color/widget_text_secondary"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>