<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header with enhanced styling -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_header_background"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_timeline"
            android:id="@+id/timeline_icon"
            android:layout_marginEnd="16dp"
            android:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habit Timeline"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.9" />

        </LinearLayout>

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_refresh"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="4dp"
            android:tint="@android:color/white"
            android:alpha="0.9"
            android:contentDescription="Refresh widget" />

    </LinearLayout>

    <!-- Next Habit Section -->
    <LinearLayout
        android:id="@+id/next_habit_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/widget_next_habit_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_schedule"
            android:layout_marginEnd="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/next_habit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next: Drink Water"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/next_habit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/widget_primary_color" />

        </LinearLayout>

    </LinearLayout>

    <!-- Habits List Container -->
    <LinearLayout
        android:id="@+id/habits_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Enhanced Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_check_circle_outline"
                android:layout_marginBottom="16dp"
                android:alpha="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No habits for today"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great work! All done."
                android:textSize="14sp"
                android:textColor="@color/widget_text_secondary"
                android:alpha="0.8"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/add_habit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Add New Habit"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/widget_add_button_background"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:contentDescription="Add new habit"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Habits List (Non-scrollable for widget compatibility) -->
        <LinearLayout
            android:id="@+id/habits_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>