<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Minimal Header with focus on content -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_header_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HabitV8"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical" />

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="2dp"
            android:tint="@android:color/white"
            android:alpha="0.9"
            android:contentDescription="Refresh widget" />

    </LinearLayout>

    <!-- Next Habit Section -->
    <LinearLayout
        android:id="@+id/next_habit_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/widget_next_habit_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_schedule"
            android:layout_marginEnd="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/next_habit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next: Drink Water"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/next_habit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/widget_primary_color" />

        </LinearLayout>

    </LinearLayout>

    <!-- Habits List Container -->
    <LinearLayout
        android:id="@+id/habits_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Optimized Empty State for better button visibility -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No habits for today"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginBottom="6dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great work! All done."
                android:textSize="14sp"
                android:textColor="@color/widget_text_secondary"
                android:alpha="0.8"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/add_habit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Add New Habit"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/widget_add_button_background"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:contentDescription="Add new habit"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Habits List -->
        <LinearLayout
            android:id="@+id/habits_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>