<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/widget_habit_item_background"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <!-- Habit Color Indicator -->
    <TextView
        android:id="@+id/habit_color_indicator"
        android:layout_width="4dp"
        android:layout_height="48dp"
        android:background="@color/widget_primary_color"
        android:layout_marginEnd="16dp" />

    <!-- Habit Info Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">

        <!-- Habit Name and Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/habit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Drink Water"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/habit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/widget_primary_color"
                android:background="@drawable/widget_time_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Status and Category Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/habit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/widget_status_due"
                android:background="@drawable/widget_status_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/habit_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginStart="12dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Complete Button (Larger, more accessible) -->
        <ImageView
            android:id="@+id/complete_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_check"
            android:background="@drawable/widget_complete_button_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:contentDescription="Mark habit complete"
            android:visibility="gone" />

        <!-- Edit Button (Larger, more accessible) -->
        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/widget_edit_button_background"
            android:padding="12dp"
            android:clickable="true"
            android:contentDescription="Edit habit" />

    </LinearLayout>

</LinearLayout>