<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/widget_habit_item_background"
    android:padding="8dp"
    android:layout_marginBottom="6dp"
    android:gravity="center_vertical">

    <!-- Habit Color Indicator -->
    <View
        android:id="@+id/habit_color_indicator"
        android:layout_width="3dp"
        android:layout_height="24dp"
        android:background="@color/widget_primary_color"
        android:layout_marginEnd="8dp" />

    <!-- Habit Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Habit Name and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/habit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Drink Water"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/habit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/widget_primary_color"
                android:background="@drawable/widget_time_background"
                android:padding="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Status and Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/habit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/widget_status_due"
                android:background="@drawable/widget_status_background"
                android:padding="4dp" />

            <TextView
                android:id="@+id/habit_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginStart="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <!-- Complete Button -->
        <ImageView
            android:id="@+id/complete_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:background="@drawable/widget_complete_button_background"
            android:padding="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:visibility="gone" />

        <!-- Edit Button -->
        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/widget_edit_button_background"
            android:padding="4dp"
            android:clickable="true" />

    </LinearLayout>

</LinearLayout>