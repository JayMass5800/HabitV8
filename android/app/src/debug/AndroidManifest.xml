<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application>
        <!-- Remove main widget providers for debug builds -->
        <receiver android:name="com.habittracker.habitv8.HabitTimelineWidgetProvider"
            tools:remove="true" />
        <receiver android:name="com.habittracker.habitv8.HabitCompactWidgetProvider" 
            tools:remove="true" />
            
        <!-- Debug Widget Providers (using .debug package) -->
        <receiver android:name="com.habittracker.habitv8.debug.HabitTimelineWidgetProvider"
            android:exported="true"
            android:label="Habit Timeline Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/habit_timeline_widget_info" />
        </receiver>
        
        <receiver android:name="com.habittracker.habitv8.debug.HabitCompactWidgetProvider"
            android:exported="true"
            android:label="Habit Compact Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/habit_compact_widget_info" />
        </receiver>
    </application>
</manifest>
